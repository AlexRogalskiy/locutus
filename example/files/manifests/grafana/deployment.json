{
  "apiVersion": "apps/v1beta2",
  "kind": "Deployment",
  "metadata": {
    "labels": {
      "app": "grafana"
    },
    "name": "grafana",
    "namespace": "default"
  },
  "spec": {
    "replicas": 1,
    "selector": {
      "matchLabels": {
        "app": "grafana"
      }
    },
    "template": {
      "metadata": {
        "labels": {
          "app": "grafana"
        }
      },
      "spec": {
        "containers": [
          {
            "image": "grafana/grafana:5.1.0",
            "name": "grafana",
            "ports": [
              {
                "containerPort": 3000,
                "name": "http"
              }
            ]
          }
        ]
      }
    }
  }
}